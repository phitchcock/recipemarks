<div class="col-md-3">
  <div class="thumbnail">
    <img src="http://placehold.it/300x200">
    <div class="caption">
      <h3><%= link_to bookmark.name, [bookmark.topic, bookmark] %></h3>
      <p>url: <%= bookmark.url %></p>
      <p><%= link_to 'edit', edit_topic_bookmark_path(bookmark.topic, bookmark) %></p>
      <p><%= link_to 'delete', topic_bookmark_path(bookmark.topic, bookmark), method: :delete, data: {confirm: 'Really?'} %></p>
      <p>Topic: <%= bookmark.topic.name %></p>

      <% if bookmark.tags.any? %>
        <% bookmark.tags.each do |tag| %>
          <%= tag.name %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
