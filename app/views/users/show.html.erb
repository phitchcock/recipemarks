<h1><%= @user.email %>'s Bookmarks</h1>
<hr>

<% @user.bookmarks.each do |bookmark| %>
<h3><%= link_to bookmark.topic.name, bookmark.topic %></h3>
<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <img src="http://placehold.it/300x200">
      <div class="caption">
        <h3><%= link_to bookmark.name, [bookmark.topic, bookmark] %></h3>
        <h3><%= bookmark.url %></h3>
        <%= link_to 'delete', topic_bookmark_path(bookmark.topic, bookmark), method: :delete, data: {confirm: 'Really?'} %>
      </div>
    </div>
  </div>
</div>
<% end %>
<%#= will_paginate @bookmarks, renderer: BootstrapPagination::Rails %>